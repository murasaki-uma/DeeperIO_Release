.wrap {
  background: inherit;
  animation: 7s spin ease-in-out infinite;
  -webkit-filter: contrast(25);
  filter: contrast(25);
  background: black;
  display none;
}

.meta:before,
.meta:after {
  content: "";
  position: absolute;
  width:80px;
  height:80px;
  left:50%;
  top:50%;
  margin:-50px;
  background: rgba(180, 162, 200,.9);
  border-radius:50%;
  -webkit-filter: blur(30px);
  filter: blur(30px);
  border: 0px;
  animation: move 12s infinite alternate ease-in-out;

}
.meta:before {
  animation-duration: 19.3s;
  animation-delay: -3.3s;
}
.meta:nth-child(2):before {
  animation-duration: 14.7s;
  animation-delay: -2.7s;
}
.meta:nth-child(2):after {
  animation-duration: 8.7s;
  animation-delay: -5.32s;
}
